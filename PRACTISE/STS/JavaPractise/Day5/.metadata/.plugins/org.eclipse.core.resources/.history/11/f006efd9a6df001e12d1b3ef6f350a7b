import java.util.*;
class Day5_10
{
	public static void main(String[] args) {
		int arr[]= {1,2,3,4,5,6};
		System.out.println(arr.toString());  // toStringmethod called 
		System.out.println(Arrays.toString(arr));
		Arrays.sort(arr);
		System.out.println();
	}
}
