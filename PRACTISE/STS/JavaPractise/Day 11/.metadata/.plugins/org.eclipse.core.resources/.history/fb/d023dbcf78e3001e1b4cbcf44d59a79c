	static void display()
	{
		try {
		System.out.println("Core -Java Exception Handling ");
		Thread.sleep(5000);
		System.out.println("handling checked Exception ");
		}catch(InterruptedException e)
		{
			System.out.println("Interupted Exception ");
		}
	}
	public static void main(String[] args) 
	{
		display();
		
		
	}
	
	

}
