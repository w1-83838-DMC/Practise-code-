<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view1"
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:name="com.ajaysurse1487.app1.FirstFragment"
        android:layout_height="match_parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_container_view2"
        android:layout_width="match_parent"
        android:name="com.ajaysurse1487.app1.SecondFragment"
        android:layout_height="match_parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_weight="0.3"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_container_view3"
        android:name="com.ajaysurse1487.app1.ThirdFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>